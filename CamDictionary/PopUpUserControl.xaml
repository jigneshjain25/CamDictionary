        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"  x:Name="meaning"  Margin="5" Text="This is where meaning comes" TextWrapping="Wrap" Foreground="#FFFBFAFA" FontSize="18" Canvas.ZIndex="999"/>
